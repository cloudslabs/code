{
  "name": "cloudscode",
  "private": true,
  "version": "0.1.0",
  "description": "Web application wrapping Claude Agent SDK with superior context and agent management",
  "scripts": {
    "dev": "pnpm --filter @cloudscode/server rebuild better-sqlite3 && turbo dev --filter=!@cloudscode/electron",
    "dev:electron": "turbo dev --filter=@cloudscode/electron",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "dist": "turbo dist",
    "dist:mac": "pnpm --filter @cloudscode/electron dist:mac",
    "dist:win": "pnpm --filter @cloudscode/electron dist:win",
    "dist:linux": "pnpm --filter @cloudscode/electron dist:linux"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0"
}
